<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282C36"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:text="播放"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"/>
    <TextView
            android:id="@+id/tv_stop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:text="停止"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:textColor="@color/white"/>

    <com.example.mykotlin.HorzTextProgressView1
            android:id="@+id/live_progress"
            android:layout_width="@dimen/dp_743"
            android:layout_height="@dimen/dp_69"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@id/tv"
            app:progress_horz_inLineColor="@color/live_progress_bg_color_inline"
            app:progress_horz_inLineSize="@dimen/dp_2_5"
            app:progress_horz_outLineColor="@color/live_progress_bg_color_outline"
            app:progress_horz_outLineSize="@dimen/dp_2_5"
            app:progress_horz_pointColor="@color/live_progress_bg_color_point"
            app:progress_horz_rect_w="@dimen/dp_4"
            app:progress_horz_rect_h="@dimen/dp_40"
            app:progress_horz_pointSize="@dimen/dp_16"
            app:progress_horz_textColor="@color/live_progress_text_bg_color"
            app:progress_horz_textSize="@dimen/sp_14"
            app:progress_horz_text_end="0"
            app:progress_horz_text_margin="@dimen/dp_14"
            app:progress_horz_dy="@dimen/dp_7"
            app:progress_horz_bg_rect_h="@dimen/dp_37"
            app:progress_horz_text_start="0"
            app:progress_horz_text_margin_start="@dimen/dp_81"
            app:layout_constraintStart_toStartOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="@+id/tv"
    />
    <com.example.mykotlin.VisualizerView
            android:id="@+id/home_iv_media_spectrogram"
            android:layout_width="@dimen/dp_455"
            android:layout_height="@dimen/dp_37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/live_progress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:visibility="visible"
            app:spaceMax="7"
            app:renderColor="#1AFFFFFF"
            app:layout_constraintTop_toTopOf="@+id/live_progress"/>
    <com.example.mykotlin.RecordWaveView
            android:id="@+id/home_record_wave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lineWidth="@dimen/dp_3"
            app:lineColor="@android:color/holo_red_dark"
            app:lineColor_start="@color/wave_line_start_color"
            app:lineColor_end="@color/wave_line_end_color"
            app:space="@dimen/dp_6"
            app:maxHeight="@dimen/dp_37"
            app:minHeight="@dimen/dp_4"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>